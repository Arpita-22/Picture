<div style="display: inline-block; margin-right: 150px;">
    <b>Upload images</b>
    <%= form_for @image do |f| %>
        <%= f.label :title %>
        <%= f.text_field :title %>
        <%= f.label :tags %>
        <%= f.text_field :tags %> (add comma separated tag values)
        <%= f.file_field :photo %>
        <%= f.submit :upload%>
    <% end %>
</div>
<br><br>
<div style="display: inline-block">
    <b>Search for images</b>
    <form class="search" id="#{@image.id}" action="/images/show" method="get">
        <label for="title">Title</label>
        <input type="text" name="image[title]" id="image_title">
        <label for="title">Tags</label>
        <input type="text" name="image[tags]" id="image_tags">
        <label for="title">Height</label>
        <input type="text" name="image[height]" id="image_height">
        <label for="title">Width</label>
        <input type="text" name="image[width]" id="image_width">
        <label for="title">Format</label>
        <input type="text" name="image[format]" id="image_format">
        <label for="title">Size in bytes</label>
        <input type="text" name="image[size_in_bytes]" id="image_size">
        <input type="submit" name="commit" value="search">
    </form>    
</div>
<div class="index" style="margin-right: 100px; float: right">
    <%= link_to "Show all images", '/images'%>
</div>
<br> <hr> <br>

<% @image_details.each do |details|%>
    <div class="polaroid">
        <img src="<%= details.image.image_url %>" style="width:100%">
        <div class="container">
            <p><%= details.image.title %> [ <%= details.image.width %> x <%= details.image.height %>]</p>
            <form class="search" id="#{@image.id}" action="/images/similar" method="get">
                <% tags = details.tags.map{|tag_details| tag_details.tag}.join('|') %>
                <input type="hidden" name="imageTags" value="<%=tags%>">
                <input type="hidden" name="imageFormat" value="<%=details.image.format%>">
                <input type="submit" name="Search similar images" value="Search similar images">
            </form>
        </div>
    </div>
<% end%>
 
