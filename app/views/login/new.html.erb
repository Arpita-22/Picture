<div class="login">
  <h1 >Log in</h1>
  <%= form_tag login_index_path, class: "auth-form" do %>
    <ul>
      <li>
        <%= label_tag :username %>
        <%= text_field_tag :username %>
      </li>
      <br>
      <li>
        <%= label_tag :password %>
        <%= password_field_tag :password %>
        <% if flash[:message] %>
          <p style="color:red; font-size: 14px;">Password do no not match</p>
        <% end %>
      </li>
    </ul>
    <%= submit_tag "Log in" %>
  <% end %>
</div>